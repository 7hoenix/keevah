<%= form_for @item, url: {action: "create", controller: "admin/items"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label "Categories" %>

  <% @categories.each do |category| %>
    <%= f.label category.title %>
    <%= check_box @item.items_categories, category.title %>
  <% end %>
  <%= f.submit %>

<% end %>
