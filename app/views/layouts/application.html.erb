<!DOCTYPE html>
<html>

<head>
  <title>DinnerDash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <style>
    body { padding-top: 70px; }
  </style>

</head>

<body>

<p class="flash">
  <%= flash.notice %>
</p>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>


<br />

<nav class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href='/'>Here is an icon of Matz</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/cart">View Cart<span class="sr-only"></span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Food Categories<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
              <div class="container">
                <div id="categories_sidebar">
                  <% Category.all.each do |category| %>
                    <li> <%= link_to category.title, category_path(category) %> </li>
                  <% end %>
                </div>
              </div>
          </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/menu">Menu</a></li>
             <div id="user_login">
               <% if current_user %>
                 You are logged in as:
                 <% if current_user.display_name %>
                   <%= current_user.display_name %>.
                   <%= link_to "Logout", logout_path %>
                 <% elsif %>
                   <%=current_user.full_name %>.
                   <%= link_to "Logout", logout_path %>
                 <% end %>
               <% else %>
                 <%= link_to "User Login", login_path %>
               <% end %>
             </div>
           </ul>
        </ul>


    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>


</body>
</html>
