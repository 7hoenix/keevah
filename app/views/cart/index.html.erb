<div class="page-header">
    <h1>My Basket</h1>
</div>
<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1"></th>
  <th colspan="1">Project Title</th>
  <th colspan="1">Borrower</th>
  <th colspan="1">Repayment Begin Date</th>
  <th colspan="1">Repayment Rate</th>
  <th colspan="1">Your Contribution</th>
  <th colspan="1"></th>
</tr>
</thead>
<tbody>
  <% if !@current_cart.cart_items.empty? %>
    <% @current_cart.cart_items_and_amount.each do |loan_request, amount| %>
      <tr>
        <td></td>
        <td><%= loan_request.title %></td>
        <td><%= loan_request.user.name.capitalize %></td>
        <td><%= loan_request.repayment_begin %></td>
        <td><%= loan_request.repayment_rate %></td>
        <td><%= number_to_currency(amount, precision: 2) %></td>
        <td><%= link_to "Remove from Basket", cart_path(loan_request), method: :delete %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="0" align="center">Your Basket is Empty - <a href="/browse">Contribute to a Project</a></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<button type="button" class="btn btn-default"><%= button_to "Transfer Funds", orders_path(:cart => @current_cart.cart_items) %></button>
