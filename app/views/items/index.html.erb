<div class="page-header">
  <h1>Loan Requests</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 pull-left">
      <select class="form-control">
        <option value="volvo">Category 1</option>
        <option value="saab">Category 2</option>
        <option value="mercedes">Category 3</option>
        <option value="audi">Category 6</option>
      </select>
    </div>

    <div class="col-md-9">
      <div id="custom-search-input">
        <div class="input-group col-md-4 pull-right">
          <input type="text" class="form-control input-sm" placeholder="Search" />
          <span class="input-group-btn">
            <button class="btn btn-info btn-sm" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </div>
    </div>

  </div>
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<br>

<div class="container">
  <% 3.times do %>
    <div class="row">
    <% 3.times do %>
      <div class="col-sm-6 col-md-4 col-lg-4">
      <div class="thumbnail">
        <img src="http://www.kiva.org/img/w632/1847429.jpg" alt="...">
        <div class="caption">
          <div class="thumbnail-label">
          <h3>Thumbnail label</h3>
          </div>
          <p>Farmers work hard and deserve your money. Help us please!</p>
          <p><a href="#" class="btn btn-default" role="button">About</a>
          <a href="#" class="btn btn-info pull-right" role="button">Add to Cart</a></p>
        </div>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
            60%
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
<% end %>
</div>
